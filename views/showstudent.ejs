<%- include('addstudent.ejs') %>
<div class="container">
    <!--<<a href="/student" class="btn btn-outline-primary">Back</a>-->
    <br>
    <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#addstudent">
        Add Student
    </button>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Section</th>
                <th>Rollno</th>
                <th>Image</th>
                <th>Biography</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% datas.forEach((data) => { %>
                <tr>
                    <td><%= data.name %></td>
                    <td><%= data.section %></td>
                    <td><%= data.rollno %></td>
                    <td><img class="responsive-img" src="/<%= data.image %>" width="130px" height="150px"></td>
                    <td><%= data.biography %></td>
                    <td class="text-right">                
                        <a href="/student/edit/<%= data._id %>" class="btn btn-outline-primary">Edit</a>
                
                        <a href="/student/delete/<%= data._id %>" class="btn btn-outline-danger" onclick="return confirm('Are you sure to delete this record ?');">Delete</a>
                    </td>
                </tr>
            <% }); %>        
        </tbody>
    </table>
    </div>